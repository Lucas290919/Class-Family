<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Class_Family.Views.HomePage"
             Title="HomePage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label x:Name="welcomeLabel" FontSize="22" HorizontalOptions="Center" />

        <Button Text="Comunicados" Clicked="OnComunicadosClicked" />
        <Button Text="Boletim" Clicked="OnBoletimClicked" />
        <Button Text="Agenda Escolar" Clicked="OnAgendaClicked" />
        <Button Text="Sair" Clicked="OnSairClicked" />
    </VerticalStackLayout>
</ContentPage>