<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Class_Family.Views.ComunicadosPage"
             Title="ComunicadosPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Entry x:Name="tituloEntry" Placeholder="TÃ­tulo" />
        <Editor x:Name="mensagemEditor" Placeholder="Mensagem..." />
        <Button Text="Enviar" Clicked="OnEnviarClicked" />

        <CollectionView x:Name="comunicadosList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10">
                        <StackLayout>
                            <Label Text="{Binding Titulo}" FontAttributes="Bold" />
                            <Label Text="{Binding Mensagem}" />
                            <Label Text="{Binding DataEnvio}" FontSize="10" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>