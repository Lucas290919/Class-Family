<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Class_Family.Views.AgendaPage"
             Title="Agendapage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <StackLayout x:Name="AgendaControls">
            <Entry x:Name="eventoEntry" Placeholder="Título do evento" />
            <Entry x:Name="descricaoEntry" Placeholder="Descrição" />
            <DatePicker x:Name="dataPicker" />
            <Button x:Name="AdicionarEventoButton" Text="Adicionar Evento" Clicked="OnAdicionarClicked" />
        </StackLayout>

        <CollectionView x:Name="agendaList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10">
                        <StackLayout>
                            <Label Text="{Binding Evento}" FontAttributes="Bold" />
                            <Label Text="{Binding Descricao}" />
                            <Label Text="{Binding Data}" FontSize="10" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>